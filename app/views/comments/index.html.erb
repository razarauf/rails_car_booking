<h1><img src="/img/comments.png" width="75px" height="75px" alt="Book header image" id="header-image" />Comments </h1>
<div class="CSSTableGenerator" >
<table>
  <tr>
    <td>User</td>
    <td>Car</td>
    <td>Model</td>
    <td>Body </td>
    <td>Date created</td>
  </tr>

<% @comment.each do |b| %>
  <tr>
  <td> <%= b.user.username %>  </td>
  <td> <%= b.car.title %>    </td>
  <td> <%= b.car.model %></td>
  <td> <%= b.body %> </td>
  <td> <%= b.car.created_at %>   </td>
  </tr>


  </tr>
<% end %>
</table>
</div>
